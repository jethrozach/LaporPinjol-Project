@model IEnumerable<LaporPinjol.Models.Report>

@{
    ViewData["Title"] = "Status";
}
<br />
<h1>History Laporan</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nama Pinjaman Online
            </th>
            <th>
                Status
            </th>
            <th>
                Tanggal Pelaporan
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanCompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerificationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmissionDate)
            </td>
            <td>
                 <form  class="form-detail" asp-action="Details" asp-route-id="@item.ReportId">
                <button type = "submit" class="btn btn-outline-primary btn-sm">Details</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
